{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jade",
  "version": "1.0.0",
  "identifier": "com.emirf.jade-rust",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:42067",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Jade",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/32x32.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
